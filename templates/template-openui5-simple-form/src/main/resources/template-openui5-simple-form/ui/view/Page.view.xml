<mvc:View
	height="100%"
	controllerName="sap.ui.layout.sample.SimpleForm480_12120.controller.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="page"
		showHeader="true" >
		<customHeader>
			<Bar>
				<contentRight>
					<Button id="edit" text="Edit" press="handleEditPress" />
					<Button id="save" text="Save" type="Emphasized" visible="false" press="handleSavePress" />
					<Button id="cancel" text="Cancel" visible="false" press="handleCancelPress" />
				</contentRight>
			</Bar>
		</customHeader>
	</Page>
</mvc:View>