<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.dirigible</groupId>
		<artifactId>org.eclipse.dirigible.parent</artifactId>
		<version>2.7.170504</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<name>Releng - Parent</name>
	<groupId>org.eclipse.dirigible.releng</groupId>
	<artifactId>org.eclipse.dirigible.releng.parent</artifactId>
	<packaging>pom</packaging>
	<url>http://www.dirigible.io</url>

	<organization>
		<name>SAP AG</name>
		<url>http://www.sap.com</url>
	</organization>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<finalName>${deployment.name}</finalName>
		<pluginManagement>
			<plugins>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>copy-libs</id>
						<phase>test</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/${deployment.name}/WEB-INF/lib</outputDirectory>
							<resources>
								<resource>
									<directory>${project.build.directory}/lib/plugins</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-web.xml</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/temp</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/src/web/${deployment.type}</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-context.xml</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/${deployment.name}/META-INF</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/src/context/${deployment.type}</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<resolver>p2</resolver>
					<pomDependencies>consider</pomDependencies>
					<ignoreTychoRepositories>true</ignoreTychoRepositories>
					<target>
						<artifact>
							<groupId>org.eclipse.dirigible.platform</groupId>
							<artifactId>org.eclipse.dirigible.platform.target</artifactId>
							<version>2.7.170504</version>
							<classifier>org.eclipse.dirigible.platform.base</classifier>
						</artifact>
					</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<packagingExcludes>**/*.source_*.jar</packagingExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webXml>${project.build.directory}/temp/web.xml</webXml>
					<failOnMissingWebXml>true</failOnMissingWebXml>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<id>tomcat-run</id>
						<goals>
							<goal>exec-war-only</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<path>/${deployment.context}</path>
							<enableNaming>false</enableNaming>
							<finalName>${deployment.executable}.jar</finalName>
							<charset>utf-8</charset>
							
							<!-- 
							<serverXml>src/main/tomcatconf/server.xml</serverXml>
							-->
							
							<!-- 
							<warRunDependencies>
							  <warRunDependency>
							    <dependency>
							      <groupId>a groupId</groupId>
							      <artifactId>and artifactId</artifactId>
							      <version>version</version>
							      <type>war</type>
							    </dependency>
							    <contextPath>/</contextPath>
							  </warRunDependency>
							</warRunDependencies>
							 -->
							
							<!-- extra dependencies to add jdbc driver, mail jars, etc. -->
							<extraDependencies>
							  <extraDependency>
							    <groupId>org.apache.derby</groupId>
							    <artifactId>derby</artifactId>
							    <version>10.11.1.1</version>
							  </extraDependency>
							  <extraDependency>
							    <groupId>javax.mail</groupId>
							    <artifactId>mail</artifactId>
							    <version>1.4.7</version>
							  </extraDependency>
							  <extraDependency>
							  	<groupId>javax.websocket</groupId>
								<artifactId>javax.websocket-api</artifactId>
								<version>1.1</version>
							  </extraDependency>
							  <extraDependency>
							    <groupId>org.apache.tomcat</groupId>
							    <artifactId>tomcat7-websocket</artifactId>
							    <version>7.0.77</version>
							  </extraDependency>
							</extraDependencies>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<deployment.type>tomcat</deployment.type>
				<deployment.name>ROOT</deployment.name>
				<deployment.context></deployment.context>
				<deployment.executable>dont-use</deployment.executable>
			</properties>
		</profile>
		<profile>
			<id>trial</id>
			<properties>
				<deployment.type>trial</deployment.type>
				<deployment.name>ROOT</deployment.name>
				<deployment.context></deployment.context>
				<deployment.executable>dirigible-trial-executable-${project.version}</deployment.executable>
			</properties>
		</profile>
		<profile>
			<id>sap</id>
			<properties>
				<deployment.type>sap</deployment.type>
				<deployment.name>ROOT</deployment.name>
				<deployment.context></deployment.context>
				<deployment.executable>dont-use</deployment.executable>
			</properties>
		</profile>
		<profile>
			<id>saptrial</id>
			<properties>
				<deployment.type>saptrial</deployment.type>
				<deployment.name>ROOT</deployment.name>
				<deployment.context></deployment.context>
				<deployment.executable>dont-use</deployment.executable>
			</properties>
		</profile>
		<profile>
			<id>iam</id>
			<properties>
				<deployment.type>iam</deployment.type>
				<deployment.name>ROOT</deployment.name>
				<deployment.context></deployment.context>
				<deployment.executable>dirigible-${project.version}</deployment.executable>
			</properties>
		</profile>
	</profiles>
	<modules>
		<module>all.tomcat</module>
		<module>runtime.tomcat</module>
        <module>air.tomcat</module>
        <module>mini.tomcat</module>
	</modules>

</project>
