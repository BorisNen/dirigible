<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<!-- Single Workspace - Deprecated -->
	<extension
           id="WorkspaceServlet"
           point="org.eclipse.equinox.http.registry.servlets">
        <servlet
              alias="/workspace"
              class="org.eclipse.dirigible.runtime.registry.WorkspaceServlet"
              load-on-startup="true">
        </servlet>
     </extension>
     
     <extension
           id="WorkspaceSearchServlet"
           point="org.eclipse.equinox.http.registry.servlets">
        <servlet
              alias="/searchw"
              class="org.eclipse.dirigible.runtime.search.WorkspaceSearchServlet"
              load-on-startup="true">
        </servlet>
     </extension>
	 
     <extension
           id="WorkspacePublishServlet"
           point="org.eclipse.equinox.http.registry.servlets">
        <servlet
              alias="/publish"
              class="org.eclipse.dirigible.runtime.registry.WorkspacePublishServlet"
              load-on-startup="true">
        </servlet>
     </extension>
     
	 <!-- Deafult Workspace -->     
     <extension
           id="WorkspaceDefaultServlet"
           point="org.eclipse.equinox.http.registry.servlets">
        <servlet
              alias="/workspaces/default/content"
              class="org.eclipse.dirigible.runtime.registry.WorkspaceDefaultServlet"
              load-on-startup="true">
        </servlet>
     </extension>
     
     <extension
           id="WorkspaceSearchDefaultServlet"
           point="org.eclipse.equinox.http.registry.servlets">
        <servlet
              alias="/workspaces/default/search"
              class="org.eclipse.dirigible.runtime.search.WorkspaceSearchDefaultServlet"
              load-on-startup="true">
        </servlet>
     </extension>
	 
     <extension
           id="WorkspacePublishServlet"
           point="org.eclipse.equinox.http.registry.servlets">
        <servlet
              alias="/workspaces/default/publish"
              class="org.eclipse.dirigible.runtime.registry.WorkspacePublishServlet"
              load-on-startup="true">
        </servlet>
     </extension>

</plugin>
